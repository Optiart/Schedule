<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <h2>Розклад</h2>
        <nav>
            <ul class="nav flex-column">
                <li class="nav-item">
                    @Html.ActionLink("Введення даних", "AddTab", new { controller = "Tab" }, new { @class = "nav-link nav-link-active" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Наявні дані", "AvailableTabs", new { controller = "Tab" }, new { @class = "nav-link nav-link-active" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Розрахунки", "AvailableResults", new { controller = "Result" }, new { @class = "nav-link nav-link-active" })
                </li>
            </ul>
        </nav>

        <div id="tab-section">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/scripts")
    @Scripts.Render("~/bundles/jquery-val")
    @RenderSection("scripts", required: false)
</body>
</html>
